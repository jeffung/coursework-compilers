<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:id="@+id/appName"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="61dp"
        android:textSize="25sp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/usernameBox"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:hint="@string/username"
        android:textSize="25sp"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/passwordBox"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:textSize="25sp"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/usernameBox"
        android:layout_alignRight="@+id/usernameBox"
        android:layout_alignLeft="@+id/usernameBox"
        android:gravity="start" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:id="@+id/btn_login"
        android:layout_marginBottom="43dp"
        android:textSize="25sp"
        android:onClick="login"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/skip"
        android:id="@+id/btn_skip"
        android:textSize="25sp"
        android:onClick="skip"
        android:layout_alignTop="@+id/btn_login"
        android:layout_alignLeft="@+id/appName"
        android:layout_alignStart="@+id/appName" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/signUp"
        android:textSize="25sp"
        android:id="@+id/button"
        android:layout_alignTop="@+id/btn_skip"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="signUp"/>

</RelativeLayout>
