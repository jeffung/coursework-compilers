<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.cmpt470g8.boardio.SignUp">

    <TextView android:text="@string/signUplbl" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblSignUp"
        android:textSize="25sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/enterNewUserName"
        android:layout_below="@+id/lblSignUp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="85dp"
        android:textSize="25sp"
        android:hint="Enter a username"
        android:layout_alignLeft="@+id/enterPassword"
        android:layout_alignStart="@+id/enterPassword" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/enterPassword"
        android:layout_below="@+id/enterNewUserName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="25sp"
        android:hint="Enter a password"
        android:layout_alignLeft="@+id/lblSignUp"
        android:layout_alignStart="@+id/lblSignUp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/confirmPassword"
        android:inputType="textPassword"
        android:layout_below="@+id/enterPassword"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="25sp"
        android:hint="Confirm your password"
        android:layout_alignLeft="@+id/enterPassword"
        android:layout_alignStart="@+id/enterPassword" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/enterEmail"
        android:inputType="textEmailAddress"
        android:layout_below="@+id/confirmPassword"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="25sp"
        android:hint="Enter an email address"
        android:layout_alignLeft="@+id/enterPassword"
        android:layout_alignStart="@+id/enterPassword" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/signUp"
        android:id="@+id/btnSignUp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/enterEmail"
        android:layout_alignEnd="@+id/enterEmail"
        android:textSize="25sp"
        android:onClick="createNewUser"/>

</RelativeLayout>
